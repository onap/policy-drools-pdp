if [[ "${DEBUG}" == "y" ]]; then
    set -x
fi

CONFIG_DIR="${POLICY_HOME}"/config
for mainConfig in ${CONFIG_DIR}/logback.xml ${CONFIG_DIR}/logback-eelf.xml; do
    if [ -e "${mainConfig}" ]; then
        sed -i --follow-symlinks 's/${abstractNetworkPattern}/${networkPattern}/' "${mainConfig}"
    fi
done
